rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 1. PERMISSIONS HELPER
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }
    function isOrganizer() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "organizer";
    }

    // 2. USERS COLLECTION
    match /users/{userId} {
      allow read: if request.auth != null; // Needed for Navbar to check roles
      allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // 3. EVENTS COLLECTION
    match /events/{eventId} {
      allow read: if true; // Public access
      allow create: if request.auth != null && (isOrganizer() || isAdmin());
      
      // Allow update if Organizer/Admin OR if it's just a student registering (incrementing count)
      allow update: if request.auth != null && (
        resource.data.organizerId == request.auth.uid || 
        isAdmin() ||
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['currentRegNo']))
      );
      
      allow delete: if request.auth != null && (
        resource.data.organizerId == request.auth.uid || isAdmin()
      );

      // Event Registrations
      match /registrations/{regId} {
        allow create: if request.auth != null;
        allow read: if request.auth != null && (
          resource.data.uid == request.auth.uid || resource.data.organizerId == request.auth.uid || isAdmin()
        );
      }
    }

    // 4. ORGANIZER REQUESTS
    match /organizerRequests/{reqId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow update: if request.auth != null && isAdmin(); // Only Admin can approve/reject
    }
  }
}
