rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /events/{eventId} {
      // Allow public read access to events
      allow read: if true;
      
      // Allow authenticated users to create new events
      allow create: if request.auth != null;
      
      // Allow authenticated users to update or delete events (optional, adjust as needed)
      allow update, delete: if request.auth != null;

      match /registrations/{regId} {
        allow create: if request.auth != null;
        
        // Allow user to read only their own registration
        allow read: if request.auth != null && resource.data.uid == request.auth.uid;
      }
    }

    // Allow users to read/write their own user profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
